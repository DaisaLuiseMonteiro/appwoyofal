DSN=pgsql:host=localhost;port=5432;dbname=pgdbDaf;sslmode=require
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pgdbDaf
DB_USER=postgres
DB_PASSWORD=yourpassword

